<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= title %></h1>

 
  <ul>
    <% messages.forEach(function(message, idx) { %>
      <li>
        <span class="user"><%= message.user %>:</span>
          <span class="text"><%= message.text %></span>
          <span class="date"><%= message.added.toLocaleString() %></span>
          <a class="button" href="/messages/<%= idx %>">Open</a>
      </li>
    <% }) %>
  </ul>
  <a class="button" href="/new">Add New Message</a>
</body>
</html>
